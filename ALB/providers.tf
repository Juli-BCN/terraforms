##################################################################################
# CONFIGURATION - added for Terraform 0.14
##################################################################################
terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "3.19.0"
    }
    null = { version = "~> 3.0" }
    random = { version = "~> 3.0" }
    vault = { version = "2.16.0" }
    external = { version = "2.0.0" }
  }
}

##################################################################################
# PROVIDERS
##################################################################################
provider "aws" {
#  profile = "tf-gitlab"
  region  = var.region
}

##################################################################################
# DATA
##################################################################################
data "aws_availability_zones" "available" {}